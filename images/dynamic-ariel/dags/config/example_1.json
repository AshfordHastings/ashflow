{
    "dag_id": "example-1",
    "artifacts": {
        "doc1": {
            "source": "AzureBlob",
            "params": {
                "blob_path": "path/to/blob"
            }
        },
        "doc2": {
            "source": "AzureBlob",
            "params": {
                "blob_path": "path/to/output/blob"
            }
        },
        "doc3": {
            "source": "AzureBlob",
            "params": {
                "blob_path": "path/to/output/asi/blob"
            }
        }
    },
    "stages": {
        "afr_1": {
            "capability": "ArielAFR",
            "input": {
                "document": {
                    "valueFrom": {
                        "artifactRef": "doc1"
                    }
                },   
                "model_id": "prebuilt-document"
            },
            "output": {
                "output_document": {
                    "valueFrom": {
                        "artifactRef": "doc2"
                    }
                }
            }
        },
        "asi_1": {
            "capability": "ArielASI",
            "input": {
                "document": {
                    "valueFrom": {
                        "artifactRef": "doc2"
                    }
                },
                "recipe_id": "1234-5678"
            },
            "output": {
                "output_document": {
                    "valueFrom": {
                        "artifactRef": "doc3"
                    }
                }
            }
        }
    },
    "schedule": "'@daily'",
    "chain": [
        "afr_1 >> asi_1"
    ]
}